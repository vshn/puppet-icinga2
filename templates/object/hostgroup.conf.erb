/**
 * A hostgroup definition. You can create your own configuration files
 * in the conf.d directory (e.g. one per host). By default all *.conf
 * files in this directory are included.
 *
 */

object HostGroup "<%= @object_hostgroup_name %>" {
  <%- @templates.each do |t| -%>
  import "<%= t -%>"
  <%- end -%>
  <%- if @display_name -%>
  display_name = "<%= @display_name -%>"
  <%- end -%>
  <%- if @groups.length != 0 -%>
  groups = [ <%- @groups.each do |group| -%> "<%= group %>", <%- end -%>]
  <%- end -%>
  <%- if @assign_where -%>
  <%- Array(@assign_where).each do |line| -%>
  assign where <%= line %>
  <%- end end -%>
  <%- if @ignore_where -%>
  <%- Array(@ignore_where).each do |line| -%>
  ignore where <%= line %>
  <%- end end -%>
}
